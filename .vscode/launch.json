    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["--channel", "left"]
        },
        {
            "name": "Python: led app",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/led_system_monitor.py",
            "console": "integratedTerminal",
            "justMyCode": true,
        }
    ]
}